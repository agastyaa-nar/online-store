{
  "name": "online-store/backend",
  "description": "Online Store Backend API for Render (PostgreSQL)",
  "type": "project",
  "require": {
    "php": ">=8.0",
    "ext-pdo": "*",
    "ext-pdo_pgsql": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-curl": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0"
  },
  "scripts": {
    "start": "php -S 0.0.0.0:$PORT -t public",
    "setup": "php setup.php",
    "test": "phpunit"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
