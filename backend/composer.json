{
  "name": "online-store/backend",
  "description": "Simple PHP backend for online store",
  "type": "project",
  "require": {
    "php": ">=8.0",
    "ext-pdo": "*",
    "ext-pdo_pgsql": "*",
    "ext-json": "*",
    "ext-mbstring": "*"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "php -r \"if (!file_exists('.env')) { copy('.env.example', '.env'); }\""
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
